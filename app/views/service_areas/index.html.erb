<%= render "application/menu" %>
<div class="flex flex-col gap-y-4">
  <h1 class="font-bold text-4xl">Service Areas <span class="px-2 rounded bg-slate-100"><%= @total_count %></span></h1>
  <div class="flex flex-col gap-y-4">
    <% @service_areas.each do |service_area| %>
      <div class="p-2 bg-slate-50 rounded">
        <h2 class="text-2xl"><%= service_area.name %></h2>
        <a href="/service_requests?sa=<%= service_area.id %>">Show <span class="font-medium"><%= @related_counts[service_area] %></span> Related Service Request(s) </a>
      </div>
    <% end %>
  </div>
</div>
