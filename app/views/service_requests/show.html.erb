<%= render "application/menu" %>
<div class="w-full">
  <% if @service_request.nil? %>
    <div class="p-4 bg-red-50 text-red-700 flex flex-col gap-y-4 rounded-md">
      <h1 class="text-4xl">Service Record Not Found</h1>
      <p class="text-lg">Uh oh! Looks like we can't find the resource you're looking for</p>
    </div>
  <% else %>
    <div class="p-4 bg-slate-50 w-full flex flex-col gap-y-4">
      <h1 class="text-4xl"><%= @service_request.service_request %></h1>
      <hr>
      <div class="flex flex-col gap-y-2">
        <h2 class="font-medium text-lg">Service Area</h2>
        <p><%= @service_request.service_area.name %></p>
        <h2 class="font-medium text-lg">Neighbourhood</h2>
        <p><%= @service_request.neighbourhood %></p>
        <h2 class="font-medium text-lg">Electoral Ward</h2>
        <p><%= @service_request.electoral_ward.name %></p>
        <h2 class="font-medium text-lg">Date Added</h2>
        <p><%= @service_request.date %></p>
        <h2 class="font-medium text-lg">Geo Data</h2>
        <p><%= @service_request.location %></p>
      </div>
    </div>
  <% end %>

</div>
